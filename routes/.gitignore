const express = require("express");
const router = express.Router();
const multer = require("multer");
const profileController = require("../controllers/profileController");

// Multer setup (store in memory only)
const storage = multer.diskStorage({});
const upload = multer({ storage });

// Routes
router.post("/create", upload.single("avatar"), profileController.addProfile);
router.get("/view/:id", profileController.fetchProfile);
router.put("/update/:id", upload.single("avatar"), profileController.modifyProfile);

module.exports = router;
